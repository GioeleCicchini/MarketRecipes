<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <style is="custom-style">
            paper-icon-item {
                position: relative;
                overflow: hidden;
            }
            .toolbar {
                background: #689F38 !important;
            }
            .header {
                font-size: 200%;
                margin-left: 50px;
            }
            .add {
                position: absolute;
                bottom: 20px;
                right: 20px;
                --paper-fab-background: var(--paper-red-500);
            }
        </style>
        <paper-drawer-panel ui:field="drawerPanel">
            <div drawer="">
                <paper-header-panel mode="seamed">
                    <paper-toolbar class="toolbar"><div>Categorie</div></paper-toolbar>
                    <div ui:field="categorie">  
                    </div>
                </paper-header-panel>
            </div>
            <div main="">
                <paper-header-panel mode="seamed">
                    <paper-toolbar class="toolbar">
                        <paper-icon-button ui:field="menu" icon="more-vert" paper-drawer-toggle=""/>
                        <span class="header">MarketRecipes</span>
                    </paper-toolbar>
                    <div ui:field="ContenutiPrincipali" class="content"/>
                </paper-header-panel>
                <paper-fab ui:field="ApriCarrello" icon="shopping-cart" title="Carrello" class="add"/>
            </div>
        </paper-drawer-panel>
        <paper-dialog ui:field="Carrello"
                entry-animation="fade-in-animation"
                class="dialog" modal="">
    <h2>Add Item</h2>
    <paper-input ui:field="titleInput" label="Title" required=""
                 auto-validate="" error-message="required input!"/>
    <div class="textarea-container iron-autogrow-textarea">
        <paper-textarea ui:field="descriptionInput" label="Notes"/>
    </div>
    <div class="buttons">
        <paper-button dialog-dismiss="">Cancel</paper-button>
        <paper-button ui:field="confirmAddButton"
                      dialog-confirm="">OK</paper-button>
    </div>
  </paper-dialog>
    </g:HTMLPanel>
</ui:UiBinder>