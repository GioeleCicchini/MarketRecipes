<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:com.vaadin.polymer.paper.widget">
	<ui:style>
	
 				.colored {
  			 	background: #4285f4;
   				color: #fff;
   				
 				}
 				.dialog{
					color: #fff;
   				
				}
		</ui:style>
		
	<g:HTMLPanel>
		<style is="custom-style">
				.general {
					border :3px solid #73AD21;
					margin-left: auto;
              		  margin-right: auto;
					}
		</style>
		
		<div class="general">
			<p:PaperButton ui:field="Primo" raised="true" addStyleNames="{style.colored}" >
				<div>Primo</div>
			</p:PaperButton>
			<p:PaperButton ui:field="Secondo" raised="true" addStyleNames="{style.colored}" >
				<div>Secondo</div>
			</p:PaperButton>
			<p:PaperDropdownMenu label="Nomi">
	  			<p:PaperMenu addStyleNames="dropdown-content">
	    		<p:PaperItem>Irene</p:PaperItem>
	    		<p:PaperItem>Gioele</p:PaperItem>
	    		<p:PaperItem>Franco</p:PaperItem>
	   			<p:PaperItem>Susanna</p:PaperItem>
	  		</p:PaperMenu>
			</p:PaperDropdownMenu>
			<p:PaperDialog ui:field="add"
                 entryAnimation="fade-in-animation"
                 addStyleNames="emphasised" modal="true"
                 >
    		<h2>Add Item</h2>
    		<p:PaperInput ui:field="titleInput" label="Title" required="true"
                  autoValidate="true" errorMessage="required input!"/>
    			<div class="textarea-container iron-autogrow-textarea">
     		 <p:PaperTextarea ui:field="descriptionInput" label="Notes"/>
   			 </div>
   			 <div class="buttons">
       				<p:PaperButton attributes="dialog-dismiss">Cancel</p:PaperButton>
       				<p:PaperButton ui:field="confirmAddButton"
                      attributes="dialog-confirm">OK</p:PaperButton>
    		</div>
  		</p:PaperDialog>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 